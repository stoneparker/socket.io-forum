{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,      
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "baseUrl": ".",                       
    "paths": {},                           
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],                       
    "esModuleInterop": true, 
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
